{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-tutorial-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-tutorial-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-video-tutorial-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-video-tutorial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-family: var(--font-heading-family);
    line-height: 1.2;
  }

  .ai-video-tutorial-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-video-tutorial-video-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.video_max_width }}px;
    margin: 0 auto;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-video-tutorial-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background-color: #f4f4f4;
    cursor: pointer;
  }

  .ai-video-tutorial-video-wrapper-{{ ai_gen_id }} iframe,
  .ai-video-tutorial-video-wrapper-{{ ai_gen_id }} video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-video-tutorial-thumbnail-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-tutorial-play-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background-color: {{ block.settings.play_button_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    pointer-events: none;
  }

  .ai-video-tutorial-video-wrapper-{{ ai_gen_id }}:hover .ai-video-tutorial-play-button-{{ ai_gen_id }} {
    transform: translate(-50%, -50%) scale(1.1);
    background-color: {{ block.settings.play_button_hover_color }};
  }

  .ai-video-tutorial-play-icon-{{ ai_gen_id }} {
    width: 0;
    height: 0;
    border-left: 24px solid {{ block.settings.play_icon_color }};
    border-top: 14px solid transparent;
    border-bottom: 14px solid transparent;
    margin-left: 6px;
  }

  .ai-video-tutorial-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-video-tutorial-video-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.video_title_size }}px;
    color: {{ block.settings.video_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-video-tutorial-video-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.video_description_size }}px;
    color: {{ block.settings.video_description_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-video-tutorial-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-tutorial-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-video-tutorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-video-tutorial-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 16px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-video-tutorial-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-video-tutorial-play-button-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
    }

    .ai-video-tutorial-play-icon-{{ ai_gen_id }} {
      border-left-width: 18px;
      border-top-width: 10px;
      border-bottom-width: 10px;
    }
  }
{% endstyle %}

<video-tutorial-{{ ai_gen_id }} class="ai-video-tutorial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-tutorial-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-video-tutorial-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-video-tutorial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-video-tutorial-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-video-tutorial-video-container-{{ ai_gen_id }}">
      <div class="ai-video-tutorial-video-wrapper-{{ ai_gen_id }}" data-video-url="{{ block.settings.video_url }}">
        {% if block.settings.thumbnail %}
          <img
            src="{{ block.settings.thumbnail | image_url: width: 1200 }}"
            alt="{{ block.settings.video_title | escape }}"
            class="ai-video-tutorial-thumbnail-{{ ai_gen_id }}"
            loading="lazy"
            width="1200"
            height="675"
          >
        {% else %}
          <div class="ai-video-tutorial-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-video-tutorial-empty-state-{{ ai_gen_id }}">
              Add a thumbnail image
            </div>
          </div>
        {% endif %}
        {% if block.settings.video_url != blank %}
          <div class="ai-video-tutorial-play-button-{{ ai_gen_id }}">
            <div class="ai-video-tutorial-play-icon-{{ ai_gen_id }}"></div>
          </div>
        {% endif %}
      </div>
      {% if block.settings.video_title != blank or block.settings.video_description != blank %}
        <div class="ai-video-tutorial-content-{{ ai_gen_id }}">
          {% if block.settings.video_title != blank %}
            <h3 class="ai-video-tutorial-video-title-{{ ai_gen_id }}">{{ block.settings.video_title }}</h3>
          {% endif %}
          {% if block.settings.video_description != blank %}
            <div class="ai-video-tutorial-video-description-{{ ai_gen_id }}">{{ block.settings.video_description }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</video-tutorial-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoTutorial{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videoWrapper = this.querySelector('.ai-video-tutorial-video-wrapper-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.videoWrapper) {
          this.videoWrapper.addEventListener('click', () => {
            this.loadVideo();
          });
        }
      }

      loadVideo() {
        const videoUrl = this.videoWrapper.getAttribute('data-video-url');
        if (!videoUrl) return;

        let embedUrl = '';
        
        if (videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be')) {
          const videoId = this.extractYouTubeId(videoUrl);
          if (videoId) {
            embedUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1&rel=0';
          }
        } else if (videoUrl.includes('vimeo.com')) {
          const videoId = this.extractVimeoId(videoUrl);
          if (videoId) {
            embedUrl = 'https://player.vimeo.com/video/' + videoId + '?autoplay=1';
          }
        } else if (videoUrl.match(/\.(mp4|webm|ogg)$/i)) {
          const video = document.createElement('video');
          video.src = videoUrl;
          video.controls = true;
          video.autoplay = true;
          this.videoWrapper.innerHTML = '';
          this.videoWrapper.appendChild(video);
          return;
        }

        if (embedUrl) {
          const iframe = document.createElement('iframe');
          iframe.src = embedUrl;
          iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
          iframe.allowFullscreen = true;
          this.videoWrapper.innerHTML = '';
          this.videoWrapper.appendChild(iframe);
        }
      }

      extractYouTubeId(url) {
        const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
        const match = url.match(regExp);
        return (match && match[2].length === 11) ? match[2] : null;
      }

      extractVimeoId(url) {
        const regExp = /vimeo.*\/(\d+)/i;
        const match = url.match(regExp);
        return match ? match[1] : null;
      }
    }

    customElements.define('video-tutorial-{{ ai_gen_id }}', VideoTutorial{{ ai_gen_id }});
  })();
</script>

