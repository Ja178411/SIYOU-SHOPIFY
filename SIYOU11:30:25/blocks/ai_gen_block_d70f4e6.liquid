<script>
  (function() {
    class BlackFridayHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.interval = null;
        this.isDestroyed = false;
        this.countdownExpired = false;
        this.handleVisibilityChange = this.handleVisibilityChange.bind(this);
      }

      connectedCallback() {
        this.isDestroyed = false;
        this.countdownExpired = false;
        this.endDate = this.dataset.endDate;
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');

        if (this.endDate && this.daysEl) {
          document.addEventListener('visibilitychange', this.handleVisibilityChange);
          this.startCountdown();
        }
      }

      handleVisibilityChange() {
        if (this.countdownExpired || this.isDestroyed) return;

        if (document.hidden) {
          this.stopCountdown();
        } else {
          this.updateCountdown();
          this.startCountdown();
        }
      }

      startCountdown() {
        if (this.interval || this.countdownExpired) return;
        this.updateCountdown();
        this.interval = setInterval(() => this.updateCountdown(), 1000);
      }

      stopCountdown() {
        if (this.interval) {
          clearInterval(this.interval);
          this.interval = null;
        }
      }

      updateCountdown() {
        const now = Date.now();
        const end = new Date(this.endDate).getTime();
        const distance = end - now;

        if (distance < 0) {
          this.countdownExpired = true;
          this.stopCountdown();
          document.removeEventListener('visibilitychange', this.handleVisibilityChange);
          this.daysEl.textContent = '00';
          this.hoursEl.textContent = '00';
          this.minutesEl.textContent = '00';
          this.secondsEl.textContent = '00';
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        this.daysEl.textContent = String(days).padStart(2, '0');
        this.hoursEl.textContent = String(hours).padStart(2, '0');
        this.minutesEl.textContent = String(minutes).padStart(2, '0');
        this.secondsEl.textContent = String(seconds).padStart(2, '0');
      }

      disconnectedCallback() {
        this.isDestroyed = true;

        document.removeEventListener('visibilitychange', this.handleVisibilityChange);

        this.stopCountdown();
      }
    }

    customElements.define('black-friday-hero-{{ ai_gen_id }}', BlackFridayHero{{ ai_gen_id }});
  })();
</script>

