<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": "{{ shop.url }}/#website",
  "url": "{{ shop.url }}",
  "name": "{{ shop.name | escape }}",
  "publisher": { "@id": "{{ shop.url }}/#organization" },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "{{ shop.url }}/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>
